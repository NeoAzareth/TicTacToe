<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    style="@style/layout_full" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_weight="1"
        android:orientation="horizontal"
        style="@style/layout_vertical" >

        <Button
            android:id="@+id/one_one"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/one_two"
            style="@style/layout_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/one_three"
            style="@style/layout_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        style="@style/layout_vertical"
        android:layout_weight="1" >

        <Button
            android:id="@+id/two_one"
            style="@style/layout_horizontal"
            android:text=""
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/two_two"
            style="@style/layout_horizontal"
            android:text=""
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/two_three"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/three_one"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/three_two"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/three_three"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/game_message"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
