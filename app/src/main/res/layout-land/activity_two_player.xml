<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    style="@style/layout_full">

    <LinearLayout
        android:id="@+id/linearLayoutLeft"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent"
        style="@style/layout_horizontal">

        <LinearLayout
            android:id="@+id/linearLayoutFirstRow"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            style="@style/layout_vertical" >

        <Button
            android:id="@+id/one_one"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/one_two"
            style="@style/layout_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/one_three"
            style="@style/layout_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:layout_margin="1dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSecondRow"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            style="@style/layout_vertical" >

        <Button
            android:id="@+id/two_one"
            style="@style/layout_horizontal"
            android:text=""
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/two_two"
            style="@style/layout_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/two_three"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutThirdRow"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            style="@style/layout_vertical" >

        <Button
            android:id="@+id/three_one"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/three_two"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/three_three"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text=""
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRight"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent"
        style="@style/layout_horizontal">

    <TextView
        android:id="@+id/game_message"
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>